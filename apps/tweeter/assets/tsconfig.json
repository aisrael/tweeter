{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "types": ["react", "jest"],
    "target": "esnext",
    "jsx": "react"
  },
  "exclude": [
    "/node_modules/**/*",
    "**/*.d.ts",
    "**/*.spec.ts",
    "**/*.scss",
    "**/*.sass",
    "**/*.css"
  ]
}
